# CrashBot API Configuration
# Copy this file to .env and fill in your values

# Anthropic API Key for Claude AI
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Server port (for local development only)
PORT=3001

# Discord OAuth2 Configuration
DISCORD_CLIENT_ID=your-client-id
DISCORD_CLIENT_SECRET=your-client-secret
DISCORD_GUILD_ID=your-guild-id
DISCORD_REDIRECT_URI=http://localhost:5173/auth/callback

# Discord Bot Token (required for fetching role names)
# Create a bot at: https://discord.com/developers/applications
# Enable "Server Members Intent" in Bot settings
DISCORD_BOT_TOKEN=your-bot-token-here

# Firebase Admin SDK Service Account (for server-side file uploads)
# 1. Go to Firebase Console > Project Settings > Service Accounts
# 2. Click "Generate new private key"
# 3. Copy the entire JSON content and paste it as a single line
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key":"...",...}
